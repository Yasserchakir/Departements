{% extends 'base.html.twig' %}

{% block title %}Détails de la Classe{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: rgba(255, 255, 128, .5);        }
    </style>
{% endblock %}
{% block body %}
    <h1 class="mt-4 mb-4">Détails de la Classe</h1>

    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ classe.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom de la Classe</th>
                        <td>{{ classe.NomClasse }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Capacité</th>
                        <td>{{ classe.capacite }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Étage</th>
                        <td>{{ classe.Etage }}</td>
                    </tr>
                    <tr>
                        <th scope="row">État</th>
                        <td>{{ classe.Etat }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Équipement</th>
                        <td>{{ classe.Equipement }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('app_classe_index') }}" class="btn btn-secondary mt-4">Retour à la liste</a>

    <a href="{{ path('app_classe_edit', {'id': classe.id}) }}" class="btn btn-primary mt-4">Modifier</a>

    {{ include('classe/_delete_form.html.twig') }}
{% endblock %}
