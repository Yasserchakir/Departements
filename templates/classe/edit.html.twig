{% extends 'base.html.twig' %}

{% block title %}Modifier Classe{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: pink;        }
    </style>
{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier une Classe</h1>

        <div class="row">
            <div class="col-md-6">
                {{ include('classe/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <a href="{{ path('app_classe_index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                {{ include('classe/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
